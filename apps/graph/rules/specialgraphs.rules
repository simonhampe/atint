# Created the complete graph on n nodes
# @param n The number of nodes
# @return graph::Graph The complete graph on n nodes
user_function complete_graph {
  my $n = shift;
  my @adj = ();
  for(my $i = 0; $i < $n; $i++) {
    @adj = (@adj,sequence(0,$n)-$i);
  }
  return new graph::Graph(N_NODES=>$n,ADJACENCY=>\@adj);
}