user_function chain_matroid {
	my ($n, $list) = @_;
	my @matroids = map { coloop_uniform_matroid($n,$n-1,$_) } @{$list};
	return matroid_intersection(@matroids);
}

user_function matroid_fan_system {
	my ($n,$r) = @_;
	my @a = all_loopfree_of_rank($n,$r);
	my @fans = map {matroid_fan_from_flats<Max>($_)} @a;
	my $sk = skeleton_complex( (matroid_fan_from_flats<Max>(matroid::uniform_matroid($n,$n))), $r-1);
	return fan_system($sk,@fans);
}

user_function set_complement {
	my ($allsets, $setlist) = @_;
	my @newsets = ();
	for my $s (@{$setlist}) {
		if(!$allsets->contains($s)) {
			push @newsets, $s;
		}
	}
	return new Array<Set<Int> >(@newsets);
}
